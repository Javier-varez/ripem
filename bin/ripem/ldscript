MEMORY
{
	dram : ORIGIN = 0x31000020, LENGTH = 1024K
}

PHDRS
{
	load PT_LOAD;
}

SECTIONS
{
	/* Force bootstrap at start of binary. */
	.startup : ALIGN(8) {
		*(.start*);
	} >dram :load

	.text : ALIGN(8) {
		*(.text*);
	} >dram :load

	.data : ALIGN(8) {
		*(.data*);
	} >dram :load

	.rodata : ALIGN(8) {
		*(.rodata*);
	} >dram :load

	.payload : ALIGN(8) {
		*(.payload*);
	} >dram :load

		_bss_start = .;
	.bss : ALIGN(8) {
		*(.bss*);
	} >dram :load
	_bss_end = .;

}
